<button class="btn btn-secondary" data-toggle="modal" data-target=".update-question-modal-lg">Update Question</button>

<!-- Modal -->

<div class="modal fade update-question-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Update Question</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="post">
        <div class="modal-body">
          <div class="form-group row">
            <label for="author" class="col-2 col-form-label">Author:</label>
            <div class="col-5">
              {{input class="form-control" type="text" value=question.author}}
            </div>
          </div>
          <div class="form-group row">
            <label for="date" class="col-2 col-form-label">Date:</label>
            <div class="col-5">
              {{input class="form-control" type="date" value=question.date}}
            </div>
          </div>
          <div class="form-group row">
            <label for="category" class="col-2 col-form-label">Category: </label>
            <div class="col-5">
              {{input class="form-control" type="text" value=question.category}}
            </div>
          </div>
          <div class="form-group row">
            <label for="content" class="col-2 col-form-label">Content: </label>
            <div class="col-10">
              {{textarea type="text" placeholder="Ask Me Anything" value=question.content class="form-control" rows="6"}}
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button {{action 'updateQuestion' question}} class="btn btn-primary" data-dismiss="modal">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>
