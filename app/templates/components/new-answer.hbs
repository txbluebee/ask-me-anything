<div class="comment-form">
  <h3>Leave a comment</h3>
  <form action="post">
    <div class="form-group row">
      <label for="author" class="col-2 col-form-label">Name:</label>
      <div class="col-5">
        {{input class="form-control" type="text" value=author}}
      </div>
    </div>
    <div class="form-group row">
      <label for="date" class="col-2 col-form-label">Date:</label>
      <div class="col-5">
        {{input class="form-control" type="date" value=date }}
      </div>
    </div>

    <div class="form-group row">
      <label for="content" class="col-2 col-form-label">Content </label>
      <div class="col-10">
        {{textarea type="text" placeholder="Comment" value=content class="form-control" rows="3"
              enter="commentSave"}}
      </div>
    </div>
    <button {{action 'saveAnswer'}} class="btn btn-secondary">Save</button>
  </form>
</div>
