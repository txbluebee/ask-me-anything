<div class="answer-form">
  <h3>Your Answer</h3>
  <form action="post">
    <div class="form-group row">
      <label for="author" class="col-2 col-form-label">Name:</label>
      <div class="col-5">
        {{input class="form-control" type="text" value=author}}
      </div>
    </div>
    <div class="form-group row">
      <label for="date" class="col-2 col-form-label">Date:</label>
      <div class="col-5">
        {{input class="form-control" type="date" value=date }}
      </div>
    </div>

    <div class="form-group row">
      <label for="content" class="col-2 col-form-label">Content </label>
      <div class="col-8">
        {{textarea type="text" placeholder="your answer..." value=content class="form-control" rows="3"}}
      </div>
    </div>
    <button {{action 'saveAnswer'}} class="btn btn-secondary">Submit Answer</button>
  </form>
</div>
