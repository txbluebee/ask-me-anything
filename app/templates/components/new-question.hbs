<!-- Button trigger modal -->
<div class="ask-question">
  <a role="button" data-toggle="modal" data-target=".new-question-modal-lg">
    What's your Question?
  </a>
</div>


<!-- Modal -->

<div class="modal fade new-question-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
<div class="modal-dialog modal-lg">
  <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Ask Question</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="post">
        <div class="modal-body">
          <div class="form-group row">
            <label for="author" class="col-2 col-form-label">Author:</label>
            <div class="col-5">
              {{input class="form-control" type="text" value=author}}
            </div>
          </div>
          <div class="form-group row">
            <label for="date" class="col-2 col-form-label">Date:</label>
            <div class="col-5">
              {{input class="form-control" type="date" value=date}}
            </div>
          </div>
          <div class="form-group row">
            <label for="category" class="col-2 col-form-label">Category: </label>
            <div class="col-5">
              {{input class="form-control" type="text" value=category}}
            </div>
          </div>
          <div class="form-group row">
            <label for="content" class="col-2 col-form-label">Content: </label>
            <div class="col-10">
              {{textarea type="text" placeholder="Just Ask Anything" value=content class="form-control" rows="6"}}
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button {{action 'saveQuestion'}} class="btn btn-primary" data-dismiss="modal">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>
